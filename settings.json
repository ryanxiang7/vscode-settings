{
	/***************************************
	 * @type editor config
	 * @author ryan xiang
	 ***************************************/
	"editor.quickSuggestions": {
		"comments": "on",
		"strings": "on",
		"other": "on"
	},
	"editor.fontFamily": "JetBrains Mono,Fira Code,Hack,\"苹方-简\"",
	"editor.fontLigatures": true,
	"editor.codeActionsOnSave": {
		// open this will auto clear the unused import
		// "source.organizeImports": true,
		"source.fixAll": true
	},
	"editor.formatOnSave": true,
	"editor.largeFileOptimizations": false,
	"editor.formatOnType": true,
	"editor.maxTokenizationLineLength": 100000,
	"editor.detectIndentation": false,
	"editor.definitionLinkOpensInPeek": true,
	"editor.wordWrapColumn": 120,
	"editor.fontWeight": "normal",
	"editor.suggest.showStatusBar": true,
	"editor.codeLensFontFamily": "JetBrains Mono,Fira Code,Hack,\"苹方-简\"",
	"editor.inlayHints.fontFamily": "JetBrains Mono,Fira Code,Hack,\"苹方-简\"",
	"editor.tabCompletion": "on",
	"editor.cursorBlinking": "smooth",
	"editor.suggest.preview": true,
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorWidth": 2,
	"editor.tabSize": 2,
	"editor.hideCursorInOverviewRuler": true,
	"editor.codeLensFontSize": 1,
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.suggest.localityBonus": true,
	"editor.stickyScroll.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.foldingMaximumRegions": 50000,
	"workbench.colorTheme": "Bearded Theme HC Flurry",
	"workbench.productIconTheme": "icons-carbon",
	"workbench.colorCustomizations": {
		"editorLineNumber.foreground": "#00A884",
		"editorLineNumber.activeForeground": "#00A884"
	},
	// 禁用斜体
	"editor.tokenColorCustomizations": {
		"[Bearded Theme Black & Diamond]": {
			"textMateRules": [
				{
					"scope": "entity.name.tag support.class.component",
					"settings": {
						"foreground": "#B78AFF"
					}
				}
			]
		},
		"[Bearded Theme Arc Blueberry]": {
			"textMateRules": [
				{
					"scope": "entity.name.tag support.class.component",
					"settings": {
						"foreground": "#B78AFF"
					}
				}
			]
		},
		// 全局禁用斜体
		"textMateRules": [
			{
				"scope": [
					"comment",
					"comment.block",
					"comment.block.documentation",
					"comment.line",
					"constant",
					"constant.character",
					"constant.character.escape",
					"constant.numeric",
					"constant.numeric.integer",
					"constant.numeric.float",
					"constant.numeric.hex",
					"constant.numeric.octal",
					"constant.other",
					"constant.regexp",
					"constant.rgb-value",
					"emphasis",
					"entity",
					"entity.name",
					"entity.name.class",
					"entity.name.function",
					"entity.name.method",
					"entity.name.section",
					"entity.name.selector",
					"entity.name.tag",
					"entity.name.type",
					"entity.other",
					"entity.other.attribute-name",
					"entity.other.inherited-class",
					"invalid",
					"invalid.deprecated",
					"invalid.illegal",
					"keyword",
					"keyword.control",
					"keyword.operator",
					"keyword.operator.new",
					"keyword.operator.assignment",
					"keyword.operator.arithmetic",
					"keyword.operator.logical",
					"keyword.other",
					"markup",
					"markup.bold",
					"markup.changed",
					"markup.deleted",
					"markup.heading",
					"markup.inline.raw",
					"markup.inserted",
					"markup.italic",
					"markup.list",
					"markup.list.numbered",
					"markup.list.unnumbered",
					"markup.other",
					"markup.quote",
					"markup.raw",
					"markup.underline",
					"markup.underline.link",
					"meta",
					"meta.block",
					"meta.cast",
					"meta.class",
					"meta.function",
					"meta.function-call",
					"meta.preprocessor",
					"meta.return-type",
					"meta.selector",
					"meta.tag",
					"meta.type.annotation",
					"meta.type",
					"punctuation.definition.string.begin",
					"punctuation.definition.string.end",
					"punctuation.separator",
					"punctuation.separator.continuation",
					"punctuation.terminator",
					"storage",
					"storage.modifier",
					"storage.type",
					"string",
					"string.interpolated",
					"string.other",
					"string.quoted",
					"string.quoted.double",
					"string.quoted.other",
					"string.quoted.single",
					"string.quoted.triple",
					"string.regexp",
					"string.unquoted",
					"strong",
					"support",
					"support.class",
					"support.constant",
					"support.function",
					"support.other",
					"support.type",
					"support.type.property-name",
					"support.variable",
					"variable",
					"variable.language",
					"variable.name",
					"variable.other",
					"variable.other.readwrite",
					"variable.parameter"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},

	/***************************************
	 * @type terminal config
	 * @author ryan xiang
	 ***************************************/
	"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell",
			"color": "terminal.ansiBlue",
			"args": ["-Nologo"]
		},
		"Git Bash": {
			"source": "Git Bash"
		}
	},
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.shellIntegration.enabled": true,
	"debug.terminal.clearBeforeReusing": true,
	"terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",

	/***************************************
	 * @type plugins config
	 * @author ryan xiang
	 ***************************************/
	// liveServer
	"liveServer.settings.donotVerifyTags": true,
	"liveServer.settings.fullReload": true,
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.port": 5500,
	// todo-tree
	"todo-tree.general.statusBar": "tags",
	"todo-tree.general.statusBarClickBehaviour": "toggle highlights",
	"todo-tree.highlights.useColourScheme": true,
	"todo-tree.general.tags": [
		"BUG",
		"HACK",
		"FIXME",
		"TODO",
		"XXX",
		"[ ]",
		"[x]"
	],
	"todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
	"todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
	"todo-tree.tree.showCountsInTree": true,
	"todo-tree.highlights.defaultHighlight": {
		"gutterIcon": true
	},
	"todo-tree.highlights.customHighlight": {
		"TODO": {
			"icon": "rocket",
			"iconColour": "#ffc500",
			"background": "#ffc500"
		},
		"FIXME": {
			"background": "#f7797d",
			"iconColour": "#f7797d"
		},
		"HACK": {
			"background": "#009FFF",
			"iconColour": "#009FFF"
		},
		"BUG": {
			"background": "#c21500",
			"iconColour": "#c21500",
			"icon": "bug"
		},
		"[ ]": {
			"iconColour": "#7F7FD5",
			"background": "#7F7FD5"
		},
		"[x]": {
			"iconColour": "#78ffd6",
			"background": "#78ffd6"
		}
	},
	// prettier
	"prettier.jsxSingleQuote": true,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"prettier.bracketSameLine": true,
	"prettier.semi": false,
	// eslint
	"eslint.packageManager": "pnpm",
	"eslint.format.enable": true,
	// volar
	"volar.codeLens.pugTools": true,
	"volar.codeLens.scriptSetupTools": true,
	"volar.completion.preferredTagNameCase": "kebab",
	"volar.preview.transparentGrid": true,
	// projectManager
	// "projectManager.vscode.baseFolders": ["D:\\Git-repo"],
	// "projectManager.git.baseFolders": ["D:\\Git-repo"],
	// code-runner
	"code-runner.runInTerminal": true,
	// rust
	"rust-analyzer.debug.openDebugPane": true,
	"lldb.suppressUpdateNotifications": true,
	"workbench.editor.decorations.colors": true,
	"workbench.startupEditor": "newUntitledFile",
	"debug.inlineValues": "on",
	"git.enableSmartCommit": true,
	"scm.defaultViewMode": "tree",
	"explorer.sortOrder": "type",
	"workbench.editor.enablePreview": false,
	"diffEditor.codeLens": true,
	"breadcrumbs.enabled": true,
	"explorer.confirmDelete": false,
	"files.autoSaveDelay": 3000,
	"merge-conflict.autoNavigateNextConflict.enabled": true,
	"files.autoGuessEncoding": true,
	"files.insertFinalNewline": true,
	"markdown.extension.tableFormatter.normalizeIndentation": true,
	"markdown.preview.breaks": true,
	"html.format.indentHandlebars": true,
	"html.format.indentInnerHtml": true,
	"files.autoSave": "afterDelay",
	"debug.showSubSessionsInToolBar": true,
	"files.eol": "\n",
	"window.commandCenter": false,
	"workbench.list.defaultFindMode": "filter",
	"workbench.editor.highlightModifiedTabs": true,
	"emmet.showSuggestionsAsSnippets": true,
	"debug.console.fontFamily": "Hack Mono,JetBrains Mono",
	"html.validate.styles": false,
	"settingsSync.ignoredExtensions": ["techer.open-in-browser"],
	"diffEditor.ignoreTrimWhitespace": false,
	"debug.console.acceptSuggestionOnEnter": "on",
	"settingsSync.ignoredSettings": ["editor.smoothScrolling"],
	//这里用来解决vscode找不到sourcemap导致断点打不上
	"debug.javascript.resourceRequestOptions": {
		"#/definitions/pwa-msedge:launch": true,
		"#/definitions/pwa-chrome:launch": true
	},

	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.suggest.paths": true,
	"javascript.inlayHints.enumMemberValues.enabled": true,
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.inlayHints.enumMemberValues.enabled": true,
	"typescript.suggest.paths": true,

	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},

	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"emmet.excludeLanguages": ["markdown"],
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},

	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},

	"[markdown]": {
		"editor.defaultFormatter": "yzhang.markdown-all-in-one"
	},

	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"jestrunner.runOptions": ["--logHeapUsage"],
	"workbench.editorAssociations": {
		"git-rebase-todo": "default"
	},
	"outline.collapseItems": "alwaysCollapse",
	"projectManager.openInNewWindowWhenClickingInStatusBar": true,
	// vim
	"vim.leader": "space",
	"vim.easymotion": true,
	"vim.incsearch": true,
	"vim.useSystemClipboard": true,
	"vim.useCtrlKeys": true,
	"vim.hlsearch": true,
	"vim.insertModeKeyBindings": [
		{
			"before": ["j", "j"],
			"after": ["<Esc>"]
		}
	],
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["<leader>", "d"],
			"after": ["d", "d"]
		},
		{
			"before": ["K"],
			"commands": ["lineBreakInsert"],
			"silent": true
		}
	],
	"vim.operatorPendingModeKeyBindings": [
		{
			"before": ["L"],
			"after": ["$"]
		},
		{
			"before": ["H"],
			"after": ["^"]
		}
	],
	"vim.handleKeys": {
		"<C-a>": false,
		"<C-f>": false,
		"<C-b>": false,
		"<C-w>": false,
		"<C-v>": false
	},
	"editor.accessibilitySupport": "off",
	"terminal.integrated.customGlyphs": false,
	"terminal.integrated.gpuAcceleration": "on",
	"terminal.integrated.smoothScrolling": true,
	"workbench.iconTheme": "bearded-icons",
	"editor.lineNumbers": "relative",
	"editor.snippetSuggestions": "top",
	"prettier.vueIndentScriptAndStyle": true,
	"workbench.sideBar.location": "right",
	"gitlens.views.branches.branches.layout": "list",
	"rust-analyzer.hover.actions.references.enable": true,
	"todo-tree.highlights.enabled": true,
	"remote.SSH.remotePlatform": {
		"172.26.230.76": "linux"
	},
	"terminal.integrated.profiles.linux": {
		"bash": {
			"path": "bash",
			"icon": "terminal-bash"
		},
		"zsh": {
			"path": "zsh"
		},
		"fish": {
			"path": "fish"
		},
		"tmux": {
			"path": "tmux",
			"icon": "terminal-tmux"
		},
		"pwsh": {
			"path": "pwsh",
			"icon": "terminal-powershell"
		}
	},
	"git.autofetch": true,
	"terminal.external.linuxExec": "zsh",
	"terminal.integrated.shellIntegration.suggestEnabled": true,
	"gitlens.codeLens.scopes": ["document", "containers", "blocks"]
}
